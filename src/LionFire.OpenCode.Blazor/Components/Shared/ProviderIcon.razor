@namespace LionFire.OpenCode.Blazor.Components.Shared

<span class="provider-icon provider-@(ProviderName?.ToLowerInvariant() ?? "unknown") @SizeClass" title="@ProviderName">
    <svg viewBox="0 0 24 24" width="@GetSize()" height="@GetSize()">
        @((MarkupString)GetProviderSvg())
    </svg>
    @if (ShowLabel)
    {
        <span class="provider-label">@GetDisplayName()</span>
    }
</span>

@code {
    [Parameter] public string? ProviderName { get; set; }
    [Parameter] public ProviderIconSize Size { get; set; } = ProviderIconSize.Small;
    [Parameter] public bool ShowLabel { get; set; }

    private string SizeClass => Size switch
    {
        ProviderIconSize.Tiny => "provider-icon-tiny",
        ProviderIconSize.Small => "provider-icon-small",
        ProviderIconSize.Medium => "provider-icon-medium",
        ProviderIconSize.Large => "provider-icon-large",
        _ => "provider-icon-small"
    };

    private int GetSize() => Size switch
    {
        ProviderIconSize.Tiny => 12,
        ProviderIconSize.Small => 16,
        ProviderIconSize.Medium => 20,
        ProviderIconSize.Large => 24,
        _ => 16
    };

    private string GetDisplayName() => ProviderName?.ToLowerInvariant() switch
    {
        "anthropic" => "Anthropic",
        "openai" => "OpenAI",
        "google" or "gemini" => "Google",
        "deepseek" => "DeepSeek",
        "mistral" => "Mistral",
        "cohere" => "Cohere",
        "together" => "Together",
        "local" or "ollama" => "Local",
        "azure" => "Azure",
        "aws" or "bedrock" => "AWS",
        _ => ProviderName ?? "Unknown"
    };

    private string GetProviderSvg() => ProviderName?.ToLowerInvariant() switch
    {
        "anthropic" => AnthropicIcon,
        "openai" => OpenAIIcon,
        "google" or "gemini" => GoogleIcon,
        "deepseek" => DeepSeekIcon,
        "mistral" => MistralIcon,
        "cohere" => CohereIcon,
        "together" => TogetherIcon,
        "local" or "ollama" => LocalIcon,
        "azure" => AzureIcon,
        "aws" or "bedrock" => AWSIcon,
        _ => DefaultIcon
    };

