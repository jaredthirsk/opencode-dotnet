@* Draggable tab bar for open files *@

<div class="file-tabs">
    <div class="tabs-container">
        @if (openFiles != null && openFiles.Any())
        {
            @foreach (var file in openFiles)
            {
                <div class="tab @(file.Id == activeFileId ? "active" : "")"
                     draggable="true"
                     @ondragstart="() => StartDrag(file.Id)"
                     @ondrop="() => DropTab(file.Id)"
                     @ondragover="AllowDrop"
                     @onclick="() => SelectFile(file.Id)">
                    <FileIcon FileName="@file.Name" />
                    <span class="tab-name">@file.Name</span>
                    @if (file.IsModified)
                    {
                        <span class="tab-modified">●</span>
                    }
                    <button class="tab-close" @onclick:stopPropagation="true" @onclick="() => CloseFile(file.Id)" title="Close">
                        ×
                    </button>
                </div>
            }
        }
    </div>

    <div class="tabs-actions">
        <button class="btn-new-file" @onclick="CreateNewFile" title="New file">+</button>
    </div>
</div>

