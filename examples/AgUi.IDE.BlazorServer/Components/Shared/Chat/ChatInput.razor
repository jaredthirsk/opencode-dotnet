@using AgUi.IDE.BlazorServer.Services
@using LionFire.OpenCode.Serve.Models
@inject IdeStateService IdeState
@inject OpenCodeIdeService OpenCodeService
@implements IDisposable

<div class="chat-input-wrapper">
    <div class="chat-input-form @(_isFocused ? "focused" : "")">
        <!-- Input area with placeholder -->
        <div class="input-area">
            <div class="input-container">
                <textarea @ref="_textAreaRef"
                          @bind="_inputText"
                          @bind:event="oninput"
                          @onfocus="OnFocus"
                          @onblur="OnBlur"
                          @onkeydown="HandleKeyDown"
                          @onkeydown:preventDefault="_preventEnter"
                          rows="1"
                          disabled="@IsDisabled"
                          class="chat-textarea"></textarea>
                @if (string.IsNullOrEmpty(_inputText))
                {
                    <div class="placeholder">Ask anything... <span class="placeholder-example">"@GetPlaceholderExample()"</span></div>
                }
            </div>
        </div>

        <!-- Toolbar below input -->
        <div class="toolbar">
            <div class="toolbar-left">
                <!-- Agent selector dropdown -->
                <div class="selector-button" @onclick="ToggleAgentMenu" @onclick:stopPropagation="true">
                    <span class="selector-value">@GetCurrentAgentDisplay()</span>
                    <svg class="dropdown-icon" fill="none" viewBox="0 0 20 20">
                        <path d="M6.6665 8.33325L9.99984 11.6666L13.3332 8.33325" stroke="currentColor" stroke-linecap="square"></path>
                    </svg>
                </div>

                <!-- Model selector -->
                <div class="selector-button model-selector" @onclick="OpenModelDialog" @onclick:stopPropagation="true">
                    <span class="model-name">@(IdeState.CurrentModelName ?? "Select Model")</span>
                    <span class="provider-name">@(IdeState.CurrentProviderName ?? "")</span>
                    <svg class="dropdown-icon" fill="none" viewBox="0 0 20 20">
                        <path d="M6.6665 8.33325L9.99984 11.6666L13.3332 8.33325" stroke="currentColor" stroke-linecap="square"></path>
                    </svg>
                </div>
            </div>

            <!-- Submit button -->
            <button type="button"
                    class="submit-button @(CanSend ? "" : "disabled")"
                    disabled="@(!CanSend)"
                    @onclick="SendMessage">
                <svg fill="none" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" clip-rule="evenodd" d="M9.99991 2.24121L16.0921 8.33343L15.2083 9.21731L10.6249 4.63397V17.5001H9.37492V4.63398L4.7916 9.21731L3.90771 8.33343L9.99991 2.24121Z" fill="currentColor"></path>
                </svg>
            </button>
        </div>
    </div>

    <!-- Agent dropdown (inline) -->
    @if (_showAgentMenu)
    {
        <div class="dropdown-backdrop" @onclick="CloseMenus"></div>
        <div class="agent-dropdown">
            @foreach (var agent in IdeState.AvailableAgents)
            {
                <div class="dropdown-item @(IdeState.CurrentAgentId == agent.Id ? "selected" : "")"
                     @onclick="() => SelectAgent(agent.Id)">
                    @ToTitleCase(agent.Name)
                </div>
            }
            @if (IdeState.CurrentAgentId != null)
            {
                <div class="dropdown-divider"></div>
                <div class="dropdown-item" @onclick="() => SelectAgent(null)">
                    Default (no agent)
                </div>
            }
        </div>
    }
</div>

<!-- Model selection dialog (modal overlay) -->
@if (_showModelDialog)
{
    <div class="dialog-overlay" @onclick="CloseModelDialog">
        <div class="model-dialog" @onclick:stopPropagation="true">
            @if (_showProviderSelection)
            {
                <!-- Provider selection view -->
                <div class="dialog-header">
                    <span class="dialog-title">Select provider</span>
                    <button class="dialog-close" @onclick="CloseModelDialog">
                        <svg fill="none" viewBox="0 0 20 20" width="16" height="16">
                            <path d="M5 5L15 15M15 5L5 15" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
                        </svg>
                    </button>
                </div>
                <div class="dialog-search">
                    <input type="text"
                           @ref="_searchInputRef"
                           @bind="_modelSearchText"
                           @bind:event="oninput"
                           placeholder="Search providers..."
                           class="search-input" />
                </div>
                <div class="dialog-content">
                    @foreach (var provider in GetFilteredProviders())
                    {
                        <div class="provider-item @(provider.Id == _selectedProviderId ? "selected" : "")"
                             @onclick="() => SelectProvider(provider.Id)">
                            <div class="provider-item-left">
                                <span class="provider-item-name">@provider.Name</span>
                                @if (provider.Id == "opencode")
                                {
                                    <span class="provider-badge recommended">Recommended</span>
                                }
                            </div>
                            <span class="provider-item-models">@(provider.Models?.Count ?? 0) models</span>
                        </div>
                    }
                    @if (!GetFilteredProviders().Any())
                    {
                        <div class="no-results">No providers found</div>
                    }
                </div>
            }
            else
            {
                <!-- Model selection view -->
                <div class="dialog-header">
                    <span class="dialog-title">Select model</span>
                    <span class="dialog-subtitle">@(SelectedProvider?.Name ?? "All Providers")</span>
                    <button class="dialog-close" @onclick="CloseModelDialog">
                        <svg fill="none" viewBox="0 0 20 20" width="16" height="16">
                            <path d="M5 5L15 15M15 5L5 15" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
                        </svg>
                    </button>
                </div>
                <div class="dialog-search">
                    <input type="text"
                           @ref="_searchInputRef"
                           @bind="_modelSearchText"
                           @bind:event="oninput"
                           @onkeydown="HandleSearchKeyDown"
                           placeholder="Search models..."
                           class="search-input" />
                </div>
                <div class="dialog-content">
                    @foreach (var item in GetFilteredModels())
                    {
                        <div class="model-item @(item.Model.Id == IdeState.CurrentModelId && item.Provider.Id == IdeState.CurrentProviderId ? "selected" : "")"
                             @onclick="() => SelectModel(item.Provider, item.Model)">
                            <div class="model-item-left">
                                <span class="model-item-name">@item.Model.Name</span>
                                @if (IsModelFree(item.Model))
                                {
                                    <span class="model-badge free">Free</span>
                                }
                            </div>
                        </div>
                    }
                    @if (!GetFilteredModels().Any())
                    {
                        <div class="no-results">No models found</div>
                    }
                </div>
                <div class="dialog-footer">
                    <button class="connect-provider-button" @onclick="ShowProviderSelection">
                        <svg fill="none" viewBox="0 0 20 20" width="14" height="14">
                            <path d="M10 4V16M4 10H16" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
                        </svg>
                        Connect to provider
                    </button>
                    <div class="toggle-group">
                        <button class="toggle-button @(_showFreeOnly ? "active" : "")" @onclick="() => _showFreeOnly = true">Free</button>
                        <button class="toggle-button @(!_showFreeOnly ? "active" : "")" @onclick="() => _showFreeOnly = false">All</button>
                    </div>
                </div>
            }
        </div>
    </div>
}

@code {
    [Parameter] public EventCallback<string> OnSend { get; set; }
    [Parameter] public bool IsDisabled { get; set; }

    private ElementReference _textAreaRef;
    private ElementReference _searchInputRef;
    private string _inputText = "";
    private string _modelSearchText = "";
    private bool _isFocused;
    private bool _showModelDialog;
    private bool _showAgentMenu;
    private bool _preventEnter;
    private bool _showFreeOnly;

    // Provider selection state
    private string? _selectedProviderId;
    private bool _showProviderSelection;

    private bool CanSend => !IsDisabled && !string.IsNullOrWhiteSpace(_inputText);

    private Provider? SelectedProvider => IdeState.AvailableProviders.FirstOrDefault(p => p.Id == _selectedProviderId);

    // Track previous state for ShouldRender optimization
    private bool _previousIsDisabled;
    private string _previousInputText = "";

    /// <summary>
    /// Optimize rendering by only re-rendering when relevant state changes.
    /// </summary>
    protected override bool ShouldRender()
    {
        // Re-render if disabled state changed
        if (_previousIsDisabled != IsDisabled)
        {
            _previousIsDisabled = IsDisabled;
            return true;
        }

        // Re-render if input text changed
        if (_previousInputText != _inputText)
        {
            _previousInputText = _inputText;
            return true;
        }

        // Always render for UI state changes (menus, dialogs, etc.)
        return true;
    }

    protected override void OnInitialized()
    {
        IdeState.OnStateChanged += OnStateChanged;
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (_showModelDialog && _searchInputRef.Id != null)
        {
            try
            {
                await _searchInputRef.FocusAsync();
            }
            catch { }
        }
    }

    private void OnStateChanged()
    {
        InvokeAsync(StateHasChanged);
    }

    private string GetPlaceholderExample()
    {
        return "Add unit tests for the user service";
    }

    private string GetCurrentAgentDisplay()
    {
        if (string.IsNullOrEmpty(IdeState.CurrentAgentId))
            return "build";
        return IdeState.CurrentAgentId.ToLower();
    }

    private void OnFocus() => _isFocused = true;
    private void OnBlur() => _isFocused = false;

    private void OpenModelDialog()
    {
        _modelSearchText = "";
        _showModelDialog = true;
        _showAgentMenu = false;
        _showProviderSelection = false;
        // Default to current provider, or first available
        _selectedProviderId = IdeState.CurrentProviderId
            ?? IdeState.AvailableProviders.FirstOrDefault()?.Id;
    }

    private void CloseModelDialog()
    {
        _showModelDialog = false;
    }

    private void ToggleAgentMenu()
    {
        _showModelDialog = false;
        _showAgentMenu = !_showAgentMenu;
    }

    private void CloseMenus()
    {
        _showModelDialog = false;
        _showAgentMenu = false;
    }

    private record ModelWithProvider(Provider Provider, Model Model);

    private IEnumerable<ModelWithProvider> GetFilteredModels()
    {
        var search = _modelSearchText?.Trim().ToLowerInvariant() ?? "";
        var provider = SelectedProvider;

        if (provider?.Models == null) yield break;

        foreach (var model in provider.Models)
        {
            // Filter by free if toggle is active
            if (_showFreeOnly && !IsModelFree(model)) continue;

            if (string.IsNullOrEmpty(search) ||
                model.Name.Contains(search, StringComparison.OrdinalIgnoreCase) ||
                model.Id.Contains(search, StringComparison.OrdinalIgnoreCase))
            {
                yield return new ModelWithProvider(provider, model);
            }
        }
    }

    private void ShowProviderSelection()
    {
        _showProviderSelection = true;
        _modelSearchText = "";
    }

    private void SelectProvider(string providerId)
    {
        _selectedProviderId = providerId;
        _showProviderSelection = false;
        _modelSearchText = "";
    }

    private IEnumerable<Provider> GetFilteredProviders()
    {
        var search = _modelSearchText?.Trim().ToLowerInvariant() ?? "";

        // Sort: opencode first, then anthropic, then alphabetically
        var sorted = IdeState.AvailableProviders
            .OrderBy(p => p.Id == "opencode" ? 0 : p.Id == "anthropic" ? 1 : 2)
            .ThenBy(p => p.Name);

        foreach (var provider in sorted)
        {
            if (string.IsNullOrEmpty(search) ||
                provider.Name.Contains(search, StringComparison.OrdinalIgnoreCase) ||
                provider.Id.Contains(search, StringComparison.OrdinalIgnoreCase))
            {
                yield return provider;
            }
        }
    }

    private void SelectModel(Provider provider, Model model)
    {
        IdeState.SetModel(provider.Id, provider.Name, model.Id, model.Name);
        _showModelDialog = false;
    }

    private async Task SelectAgent(string? agentId)
    {
        await OpenCodeService.SwitchAgentAsync(agentId);
        _showAgentMenu = false;
    }

    private void HandleSearchKeyDown(KeyboardEventArgs e)
    {
        if (e.Key == "Escape")
        {
            CloseModelDialog();
        }
        else if (e.Key == "Enter")
        {
            var firstMatch = GetFilteredModels().FirstOrDefault();
            if (firstMatch != null)
            {
                SelectModel(firstMatch.Provider, firstMatch.Model);
            }
        }
    }

    private async Task HandleKeyDown(KeyboardEventArgs e)
    {
        if (e.Key == "Enter" && !e.ShiftKey)
        {
            _preventEnter = true;
            await SendMessage();
            _preventEnter = false;
        }
        else if (e.Key == "Escape")
        {
            CloseMenus();
        }
        else
        {
            _preventEnter = false;
        }
    }

    private async Task SendMessage()
    {
        if (!CanSend) return;

        var message = _inputText.Trim();
        _inputText = "";
        CloseMenus();

        await OnSend.InvokeAsync(message);
    }

    public async Task FocusAsync()
    {
        await _textAreaRef.FocusAsync();
    }

    public void Dispose()
    {
        IdeState.OnStateChanged -= OnStateChanged;
    }

    private static string ToTitleCase(string? text)
    {
        if (string.IsNullOrEmpty(text)) return "";
        return char.ToUpper(text[0]) + text.Substring(1).ToLower();
    }

    private static bool IsModelFree(Model model)
    {
        if (model.Cost == null) return false;
        return model.Cost.Input == 0 && model.Cost.Output == 0;
    }
}

